{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd watch_finder_v2/backend && pip install --no-cache-dir -r requirements.txt"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "startCommand": "cd watch_finder_v2/backend && python api/fast_start.py"
  }
} 